@model Backend4.Models.SignUpContinueViewModel
@{
    ViewBag.Title = "Sign up";
}

<h2>Sign up</h2>

<form asp-action="SignUpCredentials" class="form-horizontal">
    <input asp-for="@Model.Name" type="hidden" />
    <input asp-for="@Model.Surname" type="hidden" />
    <input asp-for="@Model.BirthDay" type="hidden" />
    <input asp-for="@Model.BirthMonth" type="hidden" />
    <input asp-for="@Model.BirthYear" type="hidden" />
    <input asp-for="@Model.Gender" type="hidden" />
    <input asp-for="@Model.IsExisting" type="hidden" />
    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-10">
            <input asp-for="@Model.Email" type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Password</label>
        <div class="col-md-10">
            <input asp-for="@Model.Password" type="password" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Confirm password</label>
        <div class="col-md-10">
            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <div class="checkbox">
                <label>
                    <input asp-for="@Model.IsChecked" type="checkbox"/>
                    Remember?
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button type="submit" name="Action" value="SignUpComplete" class="btn btn-primary">Complete sign up</button>
        </div>
    </div>
</form>