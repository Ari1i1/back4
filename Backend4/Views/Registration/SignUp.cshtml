@model Backend4.Models.SignUpViewModel
@{
    ViewBag.Title = "Sign up";
}

<h2>Sign up</h2>

<form asp-action="SignUp" class="form-horizontal">
    <div class="form-group">
        <label class="col-md-2 control-label">First name</label>
        <div class="col-md-10">
            <input asp-for="@Model.Name" type="text" class="form-control" name="Name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Last name</label>
        <div class="col-md-10">
            <input asp-for="@Model.Surname" type="text" class="form-control" name="Surname"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Birthday</label>
        <div class="col-md-10 form-inline">
            <select asp-for="@Model.BirthDay" class="form-control">
                <option disabled="disabled">Day</option>
                @for (Int32 i = 1; i < 32; i++)
                {
                    <option>@i</option>
                }
                <span asp-validation-for="@Model.BirthDay"></span>
            </select>
            <select asp-for="@Model.BirthMonth" asp-items="@(new SelectList(ViewBag.AllMonths, "Id", "Name"))" class="form-control">
                <span asp-validation-for="@Model.BirthMonth"></span>
                <option disabled="disabled">Month</option>
            </select>
            <select asp-for="@Model.BirthYear" class="form-control">
                <option disabled="disabled">Year</option>
                 @for (Int32 i = 2000; i >= 1900; i--)
                 {
                     <option>@i</option>
                 }
                 <span asp-validation-for="@Model.BirthYear"></span>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Gender</label>
        <div class="col-md-10">
            <div class="radio">
                <label>
                    <input asp-for="@Model.Gender" name="Gender" value="Male" type="radio" />
                    Male
                </label>
            </div>
            <div class="radio">
                <label>
                    <input asp-for="@Model.Gender" name="Gender" value="Female" type="radio" />
                    Female
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button type="submit" name="Action" value="SignUpBtn" class="btn btn-primary">Sign up</button>
        </div>
    </div>
</form>